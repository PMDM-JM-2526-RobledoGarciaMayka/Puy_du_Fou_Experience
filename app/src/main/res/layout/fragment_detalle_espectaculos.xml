<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Imagen de fondo -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <!-- Imagen del espectáculo -->

            <ImageView
                android:id="@+id/imgDetalle"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:src="@drawable/ic_launcher_background" />

            <!-- Nombre del espectáculo -->

            <TextView
                android:id="@+id/tvNombreDetalle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#66000000"
                android:padding="16dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/imgDetalle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="El Último Cantar" />

            <!-- Card con información básica -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="#7E2D73"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgDetalle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Horarios -->
                    <TextView
                        android:id="@+id/tvHorariosDetalle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        tools:text="Horarios: 12:00, 16:00, 20:00" />

                    <!-- Duración -->
                    <TextView
                        android:id="@+id/tvDuracionDetalle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        tools:text="Duración: 45 minutos" />

                    <!-- Zona -->
                    <TextView
                        android:id="@+id/tvZonaDetalle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        tools:text="Zona: Reino de León" />

                    <!-- Precio -->
                    <TextView
                        android:id="@+id/tvPrecioDetalle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        tools:text="Precio: 15.00€" />

                    <!-- Restricción de Edad -->
                    <TextView
                        android:id="@+id/tvEdadDetalle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        tools:text="Edad: Todos los públicos" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Título "Descripción" -->
            <TextView
                android:id="@+id/tvTituloDescripcion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="24dp"
                android:text="Descripción"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardInfo" />

            <!-- Descripción completa -->
            <TextView
                android:id="@+id/tvDescripcionDetalle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"
                android:lineSpacingExtra="4dp"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTituloDescripcion"
                tools:text="Descripcion" />

            <!-- Toggle Button de Favoritos -->
            <ToggleButton
                android:id="@+id/toggleFav"
                android:layout_width="376dp"
                android:layout_height="57dp"
                android:layout_marginTop="24dp"
                android:textOff="Añadir a favoritos"
                android:textOn="Quitar de favoritos"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDescripcionDetalle" />

            <!-- Botón de Recordatorio -->
            <Button
                android:id="@+id/btnRecordatorio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:text="Crear Recordatorio"
                android:backgroundTint="#6B4A89"
                android:textSize="17sp"
                android:padding="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toggleFav" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>